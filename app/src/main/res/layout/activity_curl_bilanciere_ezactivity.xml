<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_curl_bilanciere_ez"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Curl Bilanciere EZ"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Curl_Bilanciere_EZ_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloCurlBilanciereEZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curl Bilanciere EZ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneCurlBilanciereEZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il Curl con bilanciere EZ è una variante molto popolare del curl per i bicipiti, che utilizza una barra curva (EZ bar) per ridurre lo stress sui polsi rispetto al bilanciere dritto. Si esegue tenendo la barra con presa supina (palmi verso l’alto) e sollevandola flettendo i gomiti fino al massimo accorciamento del bicipite. La curva della barra permette una presa semi-supina, che mantiene una buona attivazione del bicipite con maggiore comfort per articolazioni e tendini. È perfetto per sollecitare il capo corto e lungo del bicipite in modo bilanciato."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiCurlBilanciereEZ"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_curl_bilanciere_ez"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Curl Bilanciere EZ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliCurlBilanciereEZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: bicipiti brachiali\n• Muscoli secondari: brachiale, brachioradiale\n• Muscoli terziari:  muscoli flessori del polso, deltoide anteriore (minimamente)"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>