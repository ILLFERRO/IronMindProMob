<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_curl_concentrato_manubrio"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Curl Concentrato Con Manubrio"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Curl_Concentrato_Con_Manubrio_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloCurlConcentratoConManubrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curl Concentrato Con Manubrio"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneCurlConcentratoConManubrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il Curl Concentrato è un esercizio di isolamento per i bicipiti, eseguito seduti con il gomito appoggiato sull'interno della coscia. Questa posizione permette di eliminare lo slancio e focalizzarsi solo sulla contrazione del muscolo. È perfetto per scolpire e definire il picco del bicipite, rendendolo molto popolare nelle fasi di rifinitura o ipertrofia. Il movimento controllato è la chiave: si solleva lentamente il manubrio fino alla massima contrazione, poi si scende in modo controllato."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiCurlConcentratoConManubrio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_curl_concentrato_manubrio"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Curl Concentrato Con Manubrio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliCurlConcentratoConManubrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: bicipiti brachiali\n• Muscoli secondari: brachiale\n• Muscoli terziari: brachioradiale, muscoli flessori dell’avambraccio"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>