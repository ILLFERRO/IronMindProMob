<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nomeEsercizio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Esercizio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/descrizioneEsercizio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrizione"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/setCompletati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Completati"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/ripetizioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ripetizioni"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pesoTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PesoTempo"
            android:textColor="@android:color/black" />

    </LinearLayout>
</androidx.cardview.widget.CardView>