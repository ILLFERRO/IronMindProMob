<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="48dp"
    android:layout_height="72dp"
    android:gravity="center"
    android:padding="4dp">

    <TextView
        android:id="@+id/dayNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lun"
        android:textSize="14sp"
        android:textColor="#FFFFFF" />  <!-- testo bianco -->

    <!-- Pallino con numero giorno -->
    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp">

        <View
            android:id="@+id/circleBackgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cerchi_calendario" />  <!-- sfondo viola senza bordo -->

        <TextView
            android:id="@+id/dayNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="23"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>