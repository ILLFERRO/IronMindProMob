<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_leg_press"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Leg Press"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Leg_Press_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloLegPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg Press"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneLegPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Leg Press è un esercizio fondamentale per allenare le gambe in sicurezza, soprattutto se non si ha ancora la mobilità o l’esperienza per eseguire uno squat libero. Sdraiati o seduti sulla macchina, spingi con i piedi una piattaforma caricata di peso. Il movimento coinvolge la parte anteriore delle cosce ma anche glutei e parte posteriore della gamba. Grazie all’appoggio della schiena e alla traiettoria fissa, puoi usare carichi progressivi senza stressare la zona lombare. Ottimo per aumentare forza e massa muscolare nella parte inferiore del corpo."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiLegPress"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_leg_press"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Leg Press"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliLegPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: quadricipiti\n• Muscoli secondari: glutei, ischiocrurali (bicipite femorale, semitendinoso, semimembranoso)\n• Muscoli terziari: polpacci (gastrocnemio e soleo)"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
