<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Immagine grande centrata -->
    <ImageView
        android:id="@+id/imgSuccesso"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/allenamento_completato"
        android:layout_marginBottom="24dp"
        android:contentDescription="Immagine di successo" />

    <TextView
        android:id="@+id/txtCompletato"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Hai completato l'allenamento!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnSalvaScheda"
        android:text="Salva Scheda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>