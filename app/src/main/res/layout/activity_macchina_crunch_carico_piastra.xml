<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_macchina_crunch_carico_piastra"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Macchina Crunch Con Carico A Piastra"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Macchina_Crunch_Con_Carico_A_Piastra_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloMacchinaCrunchCaricoAPiastra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macchina Crunch Con Carico A Piastra"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneMacchinaCrunchCaricoAPiastra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il Crunch alla Macchina con Carico a Piastra è un esercizio specifico per l’allenamento dell’addome, in particolare del retto addominale. Si esegue seduti su una macchina guidata dotata di bracci o maniglie, con un carico selezionabile tramite piastra. Il movimento consiste nel flettere la colonna vertebrale in avanti, avvicinando il torace al bacino, con resistenza aggiunta dal carico impostato. Questo esercizio permette un allenamento mirato e progressivo dell’addome grazie alla possibilità di aumentare gradualmente i pesi. È ideale per chi vuole sviluppare forza, resistenza muscolare e spessore nella zona addominale centrale, con un’esecuzione sicura e controllata. Il supporto del macchinario riduce il rischio di compensazioni, aiutando a mantenere la corretta forma e stimolare l’addome in isolamento."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiMacchinaCrunchCaricoAPiastra"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_macchina_crunch_carico_piastra"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Macchina Crunch Carico A Piastra"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliMacchinaCrunchCaricoAPiastra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: retto dell’addome\n• Muscoli secondari: obliqui interni ed esterni\n• Muscoli terziari: ileopsoas, trasverso dell’addome (per stabilizzazione)"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>