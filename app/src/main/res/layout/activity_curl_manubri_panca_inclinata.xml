<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_curl_manubri_panca_inclinata"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Curl Con Manubri Su Panca Inclinata"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Curl_Con_Manubri_Su_Panca_Inclinata_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloCurlConManubriSuPancaInclinata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curl Con Manubri Su Panca Inclinata"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneCurlConManubriSuPancaInclinata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il Curl su Panca Inclinata è una variante che allunga la posizione iniziale del bicipite, creando maggiore tensione nel movimento. Si esegue seduti su una panca inclinata con i manubri lungo i fianchi, ed eseguendo la classica flessione del gomito. Questa posizione impedisce il cheating e isola il bicipite in modo più efficace, stimolando in particolare la porzione lunga del bicipite. Molto utile per chi cerca stimoli diversi nel lavoro delle braccia o per aumentare la definizione."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiCurlConManubriSuPancaInclinata"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_curl_panca_inclinata"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Curl Con Manubri Su Panca Inclinata"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliCurlConManubriSuPancaInclinata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: bicipiti brachiali (capo lungo)\n• Muscoli secondari: brachiale\n• Muscoli terziari: brachioradiale, deltoide anteriore (minimo)"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>