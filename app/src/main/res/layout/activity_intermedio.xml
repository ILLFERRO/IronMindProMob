<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_intermedio"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Scheda Intermedio"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Panoramica -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panoramica"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questa scheda è pensata per chi ha già un po’ di esperienza in palestra e vuole fare un passo in avanti nel proprio percorso. Gli esercizi sono più vari e includono sia macchinari che pesi liberi, così puoi iniziare a migliorare la tecnica e coinvolgere di più i muscoli stabilizzatori. L’allenamento è strutturato per dividere il lavoro muscolare su più giorni, permettendo un’intensità maggiore e una migliore qualità del movimento. Si alternano esercizi per gambe, petto, schiena, spalle e core, con un livello di difficoltà medio e carichi leggermente più impegnativi. È l’ideale per chi vuole uscire dalla fase iniziale e costruire forza, resistenza e coordinazione in modo equilibrato e progressivo."
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livello: Intermedio"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allenamenti settimanali: 3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_marginVertical="16dp" />

            <!-- Lista Allenamenti -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allenamenti"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Card Allenamento A -->
            <androidx.cardview.widget.CardView
                android:id = "@+id/Card_Allenamento_A_Intermedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giorno 1 - Allenamento A"
                        android:background="@drawable/etichetta_card"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spinta (Petto, Spalle, Tricipiti)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 esercizi"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Allenamento B -->
            <androidx.cardview.widget.CardView
                android:id = "@+id/Card_Allenamento_B_Intermedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giorno 2 - Allenamento B"
                        android:background="@drawable/etichetta_card"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trazione (Dorso, Bicipiti)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 esercizi"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Allenamento C -->
            <androidx.cardview.widget.CardView
                android:id = "@+id/Card_Allenamento_C_Intermedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giorno 3 - Allenamento C"
                        android:background="@drawable/etichetta_card"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gambe e Core"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 esercizi"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pulsante Inserisci Scheda -->
            <Button
                android:id="@+id/btnInserisciSchedaIntermedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inserisci scheda"
                android:backgroundTint="#4B0082"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>