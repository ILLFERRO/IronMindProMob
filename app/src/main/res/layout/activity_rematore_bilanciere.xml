<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_rematore_bilanciere"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Rematore Con Bilanciere"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Rematore_Con_Bilanciere_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloRematoreBilanciere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rematore Bilanciere"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneRematoreBilanciere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il Rematore con Bilanciere è un esercizio fondamentale per lo sviluppo della schiena e della forza nella tirata. In piedi, con il busto inclinato in avanti e la schiena neutra, si porta il bilanciere dal basso verso l’addome, contraendo la schiena. Questo movimento permette di costruire spessore dorsale e rinforzare la postura. A seconda dell’impugnatura e della traiettoria, si può enfatizzare la parte alta o centrale del dorso. Ottimo per la forza funzionale e per migliorare le trazioni e gli altri esercizi tirata."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiRematoreBilanciere"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_rematore_bilanciere"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Rematore Con Bilanciere"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliRematoreBilanciere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: gran dorsale, romboidi, trapezio medio\n• Muscoli secondari: bicipiti brachiali, deltoidi posteriori\n• Muscoli terziari: lombari, core, brachiale"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>