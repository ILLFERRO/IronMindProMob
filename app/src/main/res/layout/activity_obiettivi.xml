<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4B0082">  <!-- Viola scuro -->

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_obiettivi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:elevation="4dp"
        android:titleTextColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fissa il tuo obiettivo settimanale"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:padding = "12dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ti aiuteremo a raggiungere il tuo obiettivo settimanale. La costanza Ã¨ fondamentale se si vogliono raggiungere gli obiettivi prefissati. Scegli qui sotto il numero degli allenamenti settimanali che ti poni come obiettivo"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:padding = "12dp"
        android:textStyle="normal" />

    <RadioGroup
        android:id="@+id/radioGroupTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding = "12dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 giorno a settimana" />

        <RadioButton
            android:id="@+id/radioTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 giorni a settimana" />

        <RadioButton
            android:id="@+id/radioThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 giorni a settimana" />

        <RadioButton
            android:id="@+id/radioFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 giorni a settimana" />

        <RadioButton
            android:id="@+id/radioFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 giorni a settimana" />

        <RadioButton
            android:id="@+id/radioSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 giorni a settimana" />

        <RadioButton
            android:id="@+id/radioSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 giorni a settimana" />

    </RadioGroup>

</LinearLayout>