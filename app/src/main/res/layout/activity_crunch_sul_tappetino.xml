<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_crunch_sul_tappetino"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Crunch Sul Tappetino"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Crunch_Sul_Tappetino_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloCrunchSulTappetino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crunch Sul Tappetino"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneCrunchSulTappetino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il Crunch è uno degli esercizi più conosciuti per rafforzare l’addome. Sdraiati su un tappetino, con le ginocchia piegate e le mani dietro la testa o sul petto, si solleva leggermente il busto portando le spalle verso il bacino. È semplice, ma molto efficace per tonificare la zona addominale centrale. Anche se il movimento è breve, se eseguito correttamente stimola intensamente il “six-pack”. È perfetto da inserire in qualsiasi scheda di allenamento, sia a corpo libero che con pesi."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiCrunchSulTappetino"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_crunch_sul_tappetino"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Crunch Sul Tappetino"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliCrunchSulTappetino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: retto dell’addome\n• Muscoli secondari: obliqui interni ed esterni\n• Muscoli terziari: ileopsoas, trasverso dell’addome (stabilizzazione interna)"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
