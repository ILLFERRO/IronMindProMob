<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_shoulder_press"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Shoulder Press"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Shoulder_Press_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloShoulderPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulder Press"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneShoulderPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Shoulder Press è l’esercizio base per sviluppare la forza e la massa nella parte alta delle spalle. Il movimento è una spinta verticale verso l’alto, e può essere eseguito alla macchina per maggiore controllo. Durante l’esecuzione, i deltoidi lavorano in modo diretto per sollevare le braccia, mentre tricipiti e muscoli stabilizzatori aiutano nel controllo. È ottimo per migliorare la postura, aumentare la spinta verticale e dare una forma tonica e piena alla parte superiore delle spalle."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiShoulderPress"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_shoulder_press"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Shoulder Press"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliShoulderPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: deltoide anteriore e medio\n• Muscoli secondari: tricipiti brachiali\n• Muscoli terziari: trapezio superiore, parte clavicolare del pettorale"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
