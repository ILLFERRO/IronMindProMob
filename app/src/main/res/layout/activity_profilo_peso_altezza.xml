<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPesoAltezza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B0082">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profilo_peso_altezza"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#4B0082"
            android:elevation="4dp"
            android:titleTextColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso e Altezza"
            android:textSize="24sp"
            android:padding="16dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Inserisci il tuo peso (kg) e la tua altezza (cm)"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso (kg)"
                android:padding="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <NumberPicker
                android:id="@+id/numberPickerPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altezza (cm)"
                android:padding="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <NumberPicker
                android:id="@+id/numberPickerAltezza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:padding="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSalvaPesoAltezza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salva Dati"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>