<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con freccia indietro -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_tirata_stretta"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B0082"
        android:title="Tirata Stretta"
        android:titleTextColor="@android:color/white" />

    <!-- Contenuto scorrevole -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GIF o video -->
            <VideoView
                android:id="@+id/Tirata_Stretta_Video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Titolo esercizio -->
            <TextView
                android:id="@+id/titoloTirataStretta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tirata Stretta"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione esercizio -->
            <TextView
                android:id="@+id/descrizioneTirataStretta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Tirata Stretta è un esercizio fondamentale per lo sviluppo della schiena, in particolare nella sua parte centrale. Si esegue tirando una barra o una maniglia stretta (presa neutra o supina) verso il petto, mantenendo i gomiti vicini al corpo e il busto leggermente inclinato in avanti. A differenza della classica lat machine a presa larga, la versione a presa stretta enfatizza maggiormente il gran dorsale nella sua parte più interna e il romboide, favorendo uno spessore maggiore della schiena. Inoltre, l’angolazione del movimento consente di coinvolgere più intensamente i bicipiti, rendendolo anche un buon esercizio secondario per le braccia. È ideale per chi vuole migliorare la postura, potenziare i movimenti di trazione e rafforzare il dorso in modo completo e controllato."
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Immagine muscoli coinvolti -->
            <ImageView
                android:id="@+id/imgMuscoliCoinvoltiTirataStretta"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/muscoli_tirata_stretta"
                android:layout_marginBottom="16dp" />

            <!-- Titolo sezione muscoli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscoli Coinvolti Tirata Stretta"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione muscoli -->
            <TextView
                android:id="@+id/descrizioneMuscoliTirataStretta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Muscoli principali: gran dorsale (porzione interna), romboidi\n• Muscoli secondari: bicipiti brachiali, brachiale, brachioradiale\n• Muscoli terziari: deltoidi posteriori, trapezio medio e inferiore, estensori spinali"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>